<div style="text-align: center; margin: 0 auto; margin-top: 200px; border: 2px solid #AEAEAE; background-color: #FFFFFF; opacity:1; width: 500px; height: 310px; padding: 5px;">	<%= form_tag :controller => :players, :action=> :emotion_measure do%>    <h2>How do you feel? </h2>	<%=image_tag "happy_sad_faces.jpg" %> <br/>    		<%@emotions.each do|emotion|%>		<%=radio_button_tag "emotion", emotion.id%> <%=emotion.name%>	<%end%>	<%= hidden_field_tag :id, @game_round.id%> <br/>    <%= submit_tag "Submit"%><%end%></div>