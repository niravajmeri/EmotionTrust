<div style="text-align: center; margin: 0 auto; margin-top: 20px;">	<%= form_tag :controller => :players, :action=> :expectation_measure do%>    <h2>How much do you expect your opponent to cooperate?</h2>	<%=image_tag "k-bigpic.jpg", :style => "width: 300px;" %> <br/>		<h2 style="background: -moz-linear-gradient(left, #fff, #00abeb); background: -webkit-gradient(linear, left center, right center, from(#ffffff), to(#00abeb)); color: #000000; font-weight: normal;">	<%@expectations.each do|expectation|%>		<li style="list-style-type:none; display:inline; padding-right: 20px; width: 120px; font-size: 12pt;"><%=radio_button_tag "expectation", expectation.id%> <%=expectation.name%></li>	<%end%>	</h2>	<%= hidden_field_tag :id, @game_round.id%>    <%= submit_tag "Submit"%><%end%></div>