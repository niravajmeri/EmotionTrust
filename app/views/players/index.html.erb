<h1>Listing players</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Country</th>
	<th>Login status</th>
	<th>Admin status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.email %></td>
    <td><%= player.gender %></td>
    <td><%= player.country %></td>
	<td><%= player.login_status %></td>
    <td><%= player.admin_status %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

