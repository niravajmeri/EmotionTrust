<div style="text-align: center; margin: 0 auto; margin-top: 20px; ">	<%= form_tag :controller => :players, :action=> :mood_measure do%>    <h2>Hey! How are you feeling now?</h2> 		<%=image_tag "happy_sad_faces.jpg" %> <br/>		<h2 style="background: -moz-linear-gradient(left, #ff0000, #00ff00); background: -webkit-gradient(linear, left center, right center, from(#ff0000), to(#00ff00)); color: #FFFFFF; font-weight: normal;">	<%@moods.each do|mood|%>		<!-- <div style="border: 1px solid #AEAEAE; background-color: #EEEEEE; border-radius: 3px; width: 300px; text align: left; margin: 10px; height: 50px;"> -->		<li style="list-style-type:none; display:inline; padding-right: 20px; width: 120px; font-size: 12pt;"><%=radio_button_tag "mood", mood.id%> <%=mood.name%></li>		<!--</div> -->	<%end%>	</h2>			<%=hidden_field_tag :start_end_check, @start_end_check%>	<%= hidden_field_tag :id, @game.id%>    <%= submit_tag "Submit", :id => @game.id%><%end%></div>